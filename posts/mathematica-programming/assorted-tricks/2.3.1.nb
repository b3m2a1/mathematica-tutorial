fea12e4ad108"],

Cell[CellGroupData[{

Cell[BoxData[
 RowBox[{
  RowBox[{"Hold", "[", "holdReplace", "]"}], "/.", 
  RowBox[{"{", 
   RowBox[{"holdReplace", "\[RuleDelayed]", 
    RowBox[{"With", "[", 
     RowBox[{
      RowBox[{"{", 
       RowBox[{"eval", "=", 
        RowBox[{
         SubsuperscriptBox["\[Integral]", "2", "\[Pi]"], 
         RowBox[{
          RowBox[{"Sin", "[", "\[Theta]", "]"}], 
          RowBox[{"\[DifferentialD]", "\[Theta]"}]}]}]}], "}"}], ",", 
      RowBox[{"eval", "/;", "True"}]}], "]"}]}], "}"}]}]], "Code",
